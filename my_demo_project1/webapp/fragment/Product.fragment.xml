<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="productDialog"
        title="Product Details"
    >
        <content>
            <Label text="{name}" design="Bold" class="sapUiSmallMarginBottom sapUiSmallMarginTop sapUiSmallMarginBegin" width="100%"></Label>
            <Text text="{count}" class="sapUiSmallMarginBottom sapUiSmallMarginBegin" width="100%"></Text>
            <Text class="sapUiSmallMarginBegin" text="{description}" width="100%"></Text>
        </content>
        <endButton>
            <Button text="Close" press="onCloseProductDialog"></Button>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
