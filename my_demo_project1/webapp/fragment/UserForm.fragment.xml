<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        id="userFormDialog"
        title="User Details"
    >
        <content>
            <VBox
                alignItems="Center"
                width="100vw"
                class="sapUiSmallMarginTop"
            >
                <f:SimpleForm
                    title="User Details"
                    layout="ResponsiveGridLayout"
                    labelSpanL="3"
                    labelSpanM="3"
                    emptySpanL="4"
                    emptySpanM="4"
                    editable="true"
                    width="50vw"
                >
                    <f:content>
                        <Label text="Name" />
                        <Input
                            type="Text"
                            id="idInpName"
                        />
                        <Label text="Age" />
                        <Input
                            type="Number"
                            id="idInpAge"
                        />
                        <Label text="Email" />
                        <Input
                            type="Email"
                            id="idInpEmail"
                        />
                        <Label text="Phone" />
                        <Input
                            type="Tel"
                            id="idInpPhone"
                        />
                        <Label text="Address" />
                        <Input
                            type="Text"
                            id="idInpAddress"
                        />
                    </f:content>
                </f:SimpleForm>
                <Button
                    type="Emphasized"
                    text="Submit"
                    press="onFormSubmit"
                />
            </VBox>
        </content>
        <endButton>
            <Button
                text="Close"
                press="onCloseForm"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
