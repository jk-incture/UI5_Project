<mvc:View
    controllerName="com.incture.mydemoproject1.controller.CarBooking"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:card="sap.f.cards"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:html="http://www.w3.org/1999/xhtml"
>
    <Page
        id="page"
        showHeader="true"
        showNavButton="true"
        navButtonPress="onBack"
    >
        <content>
            <VBox
                class="marginAndPadding sapUiResponsiveContentPadding"
            >
                <FlexBox
                    alignItems="Center"
                    justifyContent="SpaceBetween"
                    width="100%"
                >
                    <Button icon="sap-icon://menu2" />
                    <Image
                        src="../images/logo.png"
                        width="100px"
                    />
                    <HBox alignItems="Center">
                        <Button
                            icon="sap-icon://search"
                            class="sapUiTinyMarginEnd"
                        />
                        <Button icon="sap-icon://bell" />
                    </HBox>
                </FlexBox>
                <Carousel
                    class="sapUiSmallMarginTop"
                    loop="true"
                    width="100%"
                    height="300px"
                    
                >
                    <Image
                        src="../images/car1.jpg"
                        alt="Car 1"
                    />
                    <Image
                        src="../images/car2.jpg"
                        alt="Car 2"
                    />
                    <Image
                        src="../images/car3.jpg"
                        alt="Car 3"
                    />
                    <Image
                        src="../images/car4.jpg"
                        alt="Car 4"
                    />
                    <Image
                        src="../images/car5.jpg"
                        alt="Car 5"
                    />
                </Carousel>
                <HBox justifyContent="Center">
                    <Button
                        class="SapUiSmallMarginTop"
                        text="Book a Service"
                        type="Emphasized"
                    />
                </HBox>
                <VBox>
                    <HBox
                        justifyContent="SpaceBetween"
                        alignItems="Center"
                        width="100%"
                    >
                        <f:Card
                            class="sapUiMediumMarginTop border"
                            height="auto"
                        >
                            <f:header>
                                <card:Header
                                    iconSrc="sap-icon://multiselect-all"
                                    title="View Service Status"
                                />
                            </f:header>
                        </f:Card>
                        <f:Card
                            class="sapUiMediumMarginTop border"
                            height="auto"
                        >
                            <f:header>
                                <card:Header
                                    iconSrc="sap-icon://multiselect-all"
                                    title="View Service Status"
                                />
                            </f:header>
                        </f:Card>
                    </HBox>
                    <f:Card class="sapUiSmallMarginTop border">
                        <f:header>
                            <card:Header title="Recommended for you" />
                        </f:header>
                        <f:content>
                            <List mode="SingleSelectMaster">
                                <ObjectListItem
                                    title="Camry"
                                    number="Quick Book"
                                >
                                    <attributes>
                                        <ObjectAttribute title="General Job" />
                                    </attributes>
                                </ObjectListItem>
                                <ObjectListItem
                                    title="Supra"
                                    number="Quick Book"
                                >
                                    <attributes>
                                        <ObjectAttribute title="General Job" />
                                    </attributes>
                                </ObjectListItem>
                            </List>
                        </f:content>
                    </f:Card>
                </VBox>
                <HBox
                    justifyContent="SpaceBetween"
                    width="100%"
                    alignItems="Center"
                    class="sapUiSmallMarginTop"
                >
                    <Button
                        icon="sap-icon://home"
                        text="Home"
                    />
                    <Button
                        icon="sap-icon://car-rental"
                        text="Vehicle"
                    />
                    <Button
                        icon="sap-icon://product"
                        text="Product"
                    />
                    <Button
                        icon="sap-icon://overflow"
                        text="More"
                    />
                </HBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
